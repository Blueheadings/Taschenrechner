<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/LayoutStyle">

    <TextView
        android:id="@+id/textView"
        android:gravity="end"
        android:singleLine="true"
        style="@style/TextViewStyle" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6">


        <Button
            android:id="@+id/buttonKlammerAuf"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text="("
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/buttonKlammerZu"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text=")"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/buttonGeteilt"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text="/"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/buttonMal"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text="*"
            style="@style/ButtonStyle"/>



        <Button
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="7"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/button8"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="8"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/button9"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="9"
            style="@style/ButtonStyle.Zahlen" />

        <Button
            android:id="@+id/buttonLÃ¶schen"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="DEL"
            style="@style/ButtonStyle"/>

        <!--3.Zeile-->

        <Button
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text="4"
            style="@style/ButtonStyle.Zahlen"/>


        <Button
            android:id="@+id/button5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="5"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/button6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="6"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="-"
            style="@style/ButtonStyle"/>

        <!--4.Zeile-->

        <Button
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:text="1"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:text="2"
            style="@style/ButtonStyle.Zahlen" />

        <Button
            android:id="@+id/button3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:text="3"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:text="+"
            style="@style/ButtonStyle"/>

        <!--5.Zeile-->

        <Button
            android:id="@+id/buttonMore"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:text="MORE"
            style="@style/ButtonStyle"
            android:onClick="showMorePopup"/>

        <Button
            android:id="@+id/button0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:text="0"
            style="@style/ButtonStyle.Zahlen"/>

        <Button
            android:id="@+id/buttonPunkt"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:text="."
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/buttonGleich"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:text="="
            style="@style/ButtonStyle.Istgleich"/>


    </GridLayout>

</RelativeLayout>
